<html lang="en">
{{> head}}
<body>
    {{> admin_top}}
    {{> admin_nav}}
    <div class="container-fluid">
        <div class="jumbotron row border rounded mx-auto shadow-lg admin-form">
            <legend for="all">Enter the content</legend>
            <div class="col-sm-12">
                <form action="/admin/content/edit" method="post">
                    <div class="form-group">
                        <label for="title">Title</label>
                        <input type="text" class="form-control" placeholder="Place title here" name="title">
                    </div>
                    <div class="form-group">
                        <label for="content">Content</label>
                        <textarea cols="30" rows="10" class="form-control" name="content"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>

    
</body>
</html>